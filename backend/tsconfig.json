{
  "compilerOptions": {
    // Include custom type declarations under types/
    "typeRoots": ["types", "node_modules/@types"],
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "types/**/*.d.ts"]
}
